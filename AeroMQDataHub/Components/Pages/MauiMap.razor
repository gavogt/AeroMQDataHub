@using Microsoft.AspNetCore.Components

@if (Latitude != 0 && Longitude != 0)
{
    <div style="width:100%;display:flex;justify-content:center;align-items:center;">
        <iframe
            width="95%"
            height="250"
            style="border:2px solid #198754; border-radius:12px; box-shadow:0 2px 8px rgba(0,0,0,0.08); background:#f8f9fa;"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.bing.com/maps/embed?h=250&w=400&cp=@Latitude~@Longitude&lvl=16&typ=d&sty=r&src=SHELL&FORM=MBEDV8">
        </iframe>
    </div>
}

@code {
    [Parameter] public double Latitude { get; set; }
    [Parameter] public double Longitude { get; set; }
    [Parameter] public double Altitude { get; set; }
}
